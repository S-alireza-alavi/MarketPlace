@model BidRegistrationViewModel

<h2>ثبت پیشنهاد برای محصول @Model.ProductName</h2>

<form asp-controller="Product" asp-action="RegisterBid" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="ProductId"/>
    </div>
    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="ProductPrice"></label>
        <input asp-for="ProductPrice" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="BidAmount"></label>
        <input asp-for="BidAmount" class="form-control" required/>
        <span asp-validation-for="BidAmount" class="text-danger"></span>
    </div>
    <button type="submit" class="btn-success">ثبت پیشنهاد</button>
</form>