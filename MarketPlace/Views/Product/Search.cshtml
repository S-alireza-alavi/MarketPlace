@model List<ProductOutputDto>

@{
    ViewBag.Title = "نتیجه جستجو";
}

<h2>نتایج جستجو</h2>

@if (Model.Count == 0)
{
    <p>نتیجه‌ای برای جستجوی شما یافت نشد.</p>
}
else
{
    <div class="products">
        @foreach (var product in Model)
        {
            <div class="product">
                <h3>@product.Name</h3>                
            </div>
        }
    </div>
}