@using App.Domain.Core.DtoModels.ProductComments;
@model List<ProductCommentOutputDto>


@if (Model.Count == 0)
{
    <p>نظری برای این محصول ثبت نشده است.</p>
}
else
{
    <div class="reviews">
        @foreach (var comment in Model)
        {
            <div class="review">
                <div class="row no-gutters">
                    <div class="col-auto">
                        <h4>@comment.User.FullName</h4>
                    </div>
                    <div class="col">
                        <h4>@comment.Title</h4>
                        <div class="review-content">
                            <p>@comment.CommentBody</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}