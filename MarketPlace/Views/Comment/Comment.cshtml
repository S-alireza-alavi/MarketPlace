@model CommentViewModel

@{
    ViewData["Title"] = "نظر شما";
}

<h3>نظر خود را در رابطه با خرید از این فروشگاه با ما به اشتراک بگذارید</h3>

<form method="post" asp-action="LeaveComment" asp-controller="Comment">
    <input type="hidden" name="StoreId" value="@Model.StoreId"/>
    <input type="hidden" name="UserId" value="@Model.UserId"/>

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="CommentBody"></label>
        <input asp-for="CommentBody" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">ثبت نظر</button>
</form>