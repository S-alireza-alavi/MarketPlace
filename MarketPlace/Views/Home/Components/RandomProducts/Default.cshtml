@using App.Domain.Core.DtoModels.Products;
@model List<ProductOutputDto>

<br />
<hr />
<div>
    <h2 class="text-center p-3 m-5"><span class="badge rounded-pill badge-primary p-3">پیشنهادهای امروز</span></h2>
</div>
<div class="row m-5">
    @foreach (var product in Model)
    {
        <div class="col-md-3">
            <div class="card">
                <img src="@product.ProductPhotos.FirstOrDefault()?.FilePath" class="card-img-top" alt="@product.Name" />
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Price تومان</p>
                    <a href="@Url.Action("Details", "Product", new { productId = product.Id })" class="btn btn-primary text-dark">جزئیات محصول</a>
                </div>
            </div>
        </div>
    }
</div>
