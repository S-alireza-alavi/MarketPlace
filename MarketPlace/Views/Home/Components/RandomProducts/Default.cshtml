@using App.Domain.Core.DtoModels.Products;
@model List<ProductOutputDto>

<br />
<hr />
<div>
    <h2 class="text-center p-3 m-3"><span class="badge rounded-pill badge-primary p-3">پیشنهادهای امروز</span></h2>
</div>

<div class="row m-5">
    @foreach (var product in Model)
    {
        <div class="col-3">
            <div class="card h-100">
                <img src="@product.ProductPhotos.FirstOrDefault()?.FilePath" class="card-img-top" alt="@product.Name" style="height:280px; width:auto;" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-truncate">@product.Name</h5>
                    <div>
                        <span class="card-text badge rounded-pill bg-primary text-dark m-1 p-3">قیمت: @product.Price.ToString("N0") تومان</span>
                    </div>
                    <a href="@Url.Action("Details", "Product", new { productId = product.Id })" class="btn btn-primary text-dark mt-auto w-80">جزئیات محصول</a>
                </div>
            </div>
        </div>
    }
</div>
