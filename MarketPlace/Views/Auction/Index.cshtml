@model List<ProductOutputDto>

<div>
    <h2 class="text-center m-5"><span class="badge rounded-pill badge-info p-3">کالاهای در حال مزایده</span></h2>
</div>

@if (Model.Count > 0)
{
    <div class="row m-5">
        @foreach (var product in Model)
        {
            <div class="col-3 mb-4">
                <div class="card h-100">
                    @if (product.ProductPhotos.Any())
                    {
                        <img src="@product.ProductPhotos.FirstOrDefault()?.FilePath" class="card-img-top" alt="@product.Name" style="height:280px; width:auto;" />
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate">@product.Name</h5>
                        <div>
                            <span class="card-text badge rounded-pill bg-primary text-dark m-1 p-3">آخرین قیمت ثبت شده: @product.Price</span>
                        </div>
                        <a href="@Url.Action("Details", "Product", new { productId = product.Id })" class="btn btn-secondary text-dark mt-auto w-80">جزئیات محصول</a>
                    </div>
                </div>
            </div>
        }
    </div>
}