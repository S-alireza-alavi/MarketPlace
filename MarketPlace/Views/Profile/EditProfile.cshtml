@model ProfileViewModel

<h2 class="d-flex m-4">ویرایش پروفایل</h2>
<hr />

<form method="post" asp-controller="Profile" asp-action="SaveProfile">
    <input type="hidden" name="customerId" value="@Model.CustomerId" />

    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <textarea asp-for="Address" class="form-control" rows="5"></textarea>
    </div>

    <button type="submit" class="btn btn-warning">ثبت تغییرات</button>
</form>