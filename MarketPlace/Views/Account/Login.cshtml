        <input asp-for="RememberMe" class="form-control" />
        <span asp-validation-for="RememberMe" class="text-danger"></span>
        </div>
        </div>*@

        <div class="form-group">
            <div class="form-check col-2">
                <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                <label class="form-check-label" asp-for="RememberMe">مرا به خاطر بسپار</label>
            </div>
        </div>

        <input type="submit" class="btn btn-primary" value="ورود" />
