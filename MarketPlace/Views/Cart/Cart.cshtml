@model OrderOutputDto

<div class="cart">
    <div class="container">
        <div class="row">
            <div class="col-lg-9">
                <table class="table table-cart table-mobile">
                    <thead>
                        <tr>
                            <th>محصول</th>
                            <th>قیمت</th>
                            <th>تعداد</th>
                            <th>مجموع</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td class="product-col">
                                    <div class="product">
                                        <figure class="product-media">
                                            <a href="#">
                                                <img src="/@item.ProductPhotos.FirstOrDefault()?.FilePath" alt="تصویر محصول" />
                                            </a>
                                        </figure>
                                        <h3 class="product-title">
                                            <a href="#">@item.Product.Name</a>
                                        </h3>
                                    </div>
                                </td>
                                <td class="price-col">@item.Product.Price.ToString("N0")</td>
                                <td class="quantity-col">
                                    <div class="cart-product-quantity">
                                        <input type="number" class="form-control" value="1" min="1" max="10" step="1" data-decimals="0" required>
                                    </div>
                                </td>
                                <td class="total-col">@Model.TotalPrice.ToString("N0")</td>
                                <td class="remove-col">
                                    <button class="btn-remove"><i class="icon-close"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="cart-bottom">
                    <div class="cart-discount">
                        <form action="#">
                            <div class="input-group">
                                <input type="text" class="form-control" required placeholder="کد تخفیف">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-primary-2" type="submit">
                                        <i class="icon-long-arrow-left"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <a href="#" class="btn btn-outline-dark-2">
                        <span>به روز رسانی سبد خرید</span><i class="icon-refresh"></i>
                    </a>
                </div>

            </div>

            <aside class="col-lg-3">
                <div class="summary summary-cart">
                    <h3 class="summary-title">جمع سبد خرید</h3>
                    <table class="table table-summary">
                        <tbody>
                            <tr class="summary-subtotal">
                                <td>جمع کل سبد خرید :</td>
                                <td class="text-left">@Model.TotalPrice.ToString("N0") تومان</td>
                            </tr>
                            <tr class="summary-total">
                                <td>مبلغ قابل پرداخت :</td>
                                <td class="text-left">@Model.TotalPrice.ToString("N0") تومان</td>
                            </tr>
                        </tbody>
                    </table>
                    <a href="checkout.html" class="btn btn-outline-primary-2 btn-order btn-block">رفتن به صفحه پرداخت</a>
                </div>
                <a href="category.html" class="btn btn-outline-dark-2 btn-block mb-3">
                    <span>ادامه خرید</span>
                    <i class="icon-refresh"></i>
                </a>
            </aside>
        </div>
    </div>
</div>