@model List<StoreOutputDto>

<h1>فروشگاه‌های مرتبط</h1>

<div class="row m-5">
    @foreach (var store in Model)
    {
        <div class="col-md-3">
            <div class="card h-100">
                <img src="~/store/store-pic.png" class="card-img-top" alt="store-pic" style="height:280px; width:auto;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><a href="@Url.Action("StoreProducts", "Category", new {storeId = store.Id })"><span class="bg-primary text-dark m-1 p-1">@store.Name</span></a></h5>
                    <p class="card-text text-truncate">@store.Description</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><span class="card-text badge rounded-pill bg-secondary text-dark m-1 p-3">نام کاربری فروشنده: @store.SellerUserName</span></li>
                </ul>
            </div>
        </div>
    }
</div>