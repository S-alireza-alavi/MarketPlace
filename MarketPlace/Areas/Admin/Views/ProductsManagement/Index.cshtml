@model List<ProductOutputDto>

<br />
<br />

<form class="d-none d-md-flex ms-4" asp-area="Admin" asp-controller="ProductsManagement" asp-action="Index">
    <input value="@ViewBag.Search" class="form-control border-0" type="search" placeholder="جستجوی محصول" name="search" />
    <input class="btn btn-primary" type="submit" value="جستجو" />
</form>
<br />

<a asp-area="Admin" asp-controller="ProductsManagement" asp-action="Create" class="btn btn-success">افزودن</a>

<table class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th>شناسه</th>
            <th>نام محصول</th>
            <th>دسته‌بندی</th>
            <th>برند</th>
            <th>غرفه مربوط</th>
            <th>توضیحات</th>
            <th>تعداد</th>
            <th>قیمت</th>
            <th>وضعیت</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.CategoryId</td>
                <td>@product.BrandId</td>
                <td>@product.StoreId</td>
                <td>@product.Weight</td>
                <td>@product.Description</td>
                <td>@product.Count</td>
                <td>@product.Price</td>
                <td>@product.IsActive</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-controller="ProductsManagement" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">ویرایش</a>
                        <a asp-controller="ProductsManagement" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">حذف</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>