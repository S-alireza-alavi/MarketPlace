@model List<ProductOutputDto>

<br />
<br />

<form class="d-none d-md-flex ms-4" asp-area="Admin" asp-controller="ProductsManagement" asp-action="Index">
    <input value="@ViewBag.Search" class="form-control border-0" type="search" placeholder="جستجوی محصول" name="search" />
    <input class="btn btn-primary" type="submit" value="جستجو" />
</form>
<br />

<table class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th>شناسه</th>
            <th>نام محصول</th>
            <th>دسته‌بندی</th>
            <th>برند</th>
            <th>غرفه مربوط</th>
            <th>توضیحات</th>
            <th>تعداد</th>
            <th>قیمت</th>
            <th>وضعیت</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            Random random = new();
            const string chars = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
            var randomId = new string(Enumerable.Repeat(chars, 8)
            .Select(s => s[random.Next(s.Length)]).ToArray());

            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Category.Name</td>
                <td>@product.Brand.Name</td>
                <td>@product.Store.Name</td>
                <td>@product.Weight</td>
                <td>@product.Description</td>
                <td>@product.Count</td>
                <td>@product.Price</td>
                <td>@product.IsActive</td>
                <td>
                    <button style="cursor:pointer" type="button" class="btn btn-danger btn-round text-light" data-toggle="modal" data-target="#@randomId">
                        حذف
                    </button>
                    <div class="modal fade" id="@randomId" tabindex="-1" role="dialog" aria-labelledby="DeleteModal" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">حذف محصول <span class="badge badge-success mr-2">@product.Name</span></h5>
                                </div>
                                <div class="modal-body">
                                    شما در حال حذف محصول <strong class="text-primary">@product.Name</strong> هستید، از حذف این محصول اطمینان دارید؟
                                </div>
                                <div class="modal-footer">
                                    <button style="cursor:pointer" type="button" class="btn btn-success btn-round text-light ml-2 mr-2 pr-3 pl-3" data-dismiss="modal">انصراف</button>
                                    <form asp-area="Admin" asp-controller="ProductsManagement" asp-action="Delete" method="post">
                                        <input style="display:none" name="userId" value="@product.Id" />
                                        <button style="cursor:pointer" type="submit" class="btn btn-danger btn-round text-light">حذف کن</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <a asp-area="Admin" asp-controller="ProductsManagement" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">ویرایش</a>
                </td>
            </tr>
        }
    </tbody>
</table>