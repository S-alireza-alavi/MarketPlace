@model UsersOutputDto

<form asp-area="Admin" asp-controller="UsersManagement" asp-action="Edit" method="post">
    <div class="mb-3">
        <label asp-for="Id" class="form-label"></label>
        <input asp-for="Id" readonly class="form-control" />
        <span asp-validation-for="Id"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" readonly class="form-control" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label asp-for="UserName" class="form-label"></label>
        <input asp-for="UserName" readonly class="form-control" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" readonly class="form-control" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Roles" class="form-label"></label>
        <select asp-for="Roles" class="select-chosen form-select" tabindex="8" multiple style="width: 350px" data-placeholder="نقش‌ها" asp-items="@ViewBag.Roles">
            <option value=""></option>
            @foreach (var role in Model.Roles)
            {
                <option value="@role" selected>@role</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">پسوورد قدیم</label>
        <input name="oldPassword" type="password" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">پسوورد جدید</label>
        <input name="newPassword" type="password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">ویرایش</button>
</form>

@section Scripts{
    <script>
        $(function () {
            $(".select-chosen").chosen({ rtl: true });
        });
    </script>
}