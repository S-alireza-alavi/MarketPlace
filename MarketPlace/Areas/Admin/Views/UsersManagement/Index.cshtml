@model List<UsersOutputDto>
<br />
<br />

<form class="d-none d-md-flex ms-4" asp-area="Admin" asp-controller="UsersManagement" asp-action="Index">
    <input value="@ViewBag.Search" class="form-control" type="search" placeholder="جستجوی کاربر" name="search" />
    <input class="btn btn-primary" type="submit" value="جستجو" />
</form>
<br />

<table class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th>شناسه</th>
            <th>نام کاربری</th>
            <th>ایمیل</th>
            <th>شماره موبایل</th>
            <th>نقش‌ها</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            Random random = new();
            const string chars = "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
            var randomId = new string(Enumerable.Repeat(chars, 8)
            .Select(s => s[random.Next(s.Length)]).ToArray());

            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        <p>@role</p>
                    }
                </td>
                <td>
                    <a asp-area="Admin" asp-controller="UsersManagement" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">ویرایش</a>
                    <a asp-area="Admin" asp-controller="UsersManagement" asp-action="Delete" asp-route-userId="@user.Id" class="btn btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>