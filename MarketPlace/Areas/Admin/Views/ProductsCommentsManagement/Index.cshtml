@model List<ProductCommentOutputDto>

<br />
<br />

<h4>لیست در انتظار تایید کامنت‌های محصولات</h4>

<table class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th>شناسه</th>
            <th>عنوان نظر</th>
            <th>متن نظر</th>
            <th>نام کاربر</th>
            <th>نام محصول</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model)
        {
            <tr>
                <td>@comment.Id</td>
                <td>@comment.Title</td>
                <td>@comment.CommentBody</td>
                <td>@comment.User.FullName</td>
                <td>@comment.Product.Name</td>
                <td><a asp-controller="ProductsCommentsManagement" asp-action="ConfirmComment" asp-route-commentId="@comment.Id" class="btn btn-success">تایید</a></td>
            </tr>
        }
    </tbody>
</table>